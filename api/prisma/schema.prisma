generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  boards     Board[]
}

model Status {
  id          String  @id @default(uuid())
  name        String
  nameOnBoard String
  Board       Board?  @relation(fields: [boardId], references: [id])
  boardId     String?
}

model Board {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  status     Status[]
  users      User[]
}
